        function handleLogMaintenance(event) {
            event.preventDefault();
            const form = event.target;

            const vehicleId = form[0].value;
            const vehicle = AppData.vehicles.find(v => v.id === vehicleId);
            const unit = vehicle.odometerType === 'hours' ? 'hrs' : 'mi';

            const log = {
                id: Date.now().toString(),
                vehicleId: vehicleId,
                type: form[1].value,
                odometer: parseInt(form[2].value),
                date: form[3].value,
                cost: parseFloat(form[4].value) || 0,
                notes: form[5].value,
                unit: unit,
                createdAt: new Date().toISOString()
            };

            AppData.maintenanceLogs.push(log);

            // Update vehicle odometer if this reading is higher
            if (log.odometer > vehicle.currentOdometer) {
                vehicle.currentOdometer = log.odometer;
            }

            saveData();
            form.reset();

            // Go back to vehicle detail or dashboard
            if (currentVehicleId) {
                showVehicleDetail(currentVehicleId);
            } else {
                showScreen('dashboard');
