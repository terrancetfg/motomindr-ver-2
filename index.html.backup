            gap: var(--space-3);
            margin-top: var(--space-6);
        }

        .stat-card {
            background: var(--gray-50);
            padding: var(--space-5);
            border-radius: var(--radius-xl);
            text-align: center;
            border: 1px solid var(--gray-100);
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: var(--space-2);
        }

        .stat-label {
            font-size: 11px;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.8px;
            font-weight: 600;
        }

        .reminder-card {
            background: white;
            border-left: 3px solid var(--accent-500);
            padding: var(--space-5);
            border-radius: var(--radius-xl);
            margin-bottom: var(--space-3);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-100);
            border-left: 3px solid var(--accent-500);
        }

        .reminder-card.due-soon {
            border-left-color: var(--danger-500);
        }

        .reminder-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: var(--space-2);
        }

        .reminder-title {
            font-weight: 600;
            color: var(--gray-900);
            font-size: 15px;
        }

        .activity-item {
            display: flex;
            gap: var(--space-4);
            padding: var(--space-5);
            background: white;
            border-radius: var(--radius-xl);
            margin-bottom: var(--space-3);
            border: 1px solid var(--gray-100);
            box-shadow: var(--shadow-sm);
        }

        .activity-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .activity-icon.maintenance {
            background: var(--primary-50);
            color: var(--primary-600);
        }

        .activity-icon.ride {
            background: #E6F7F5;
            color: var(--success-600);
        }

        .activity-icon i {
            font-size: 22px;
        }

        .activity-content {
            flex: 1;
        }

        .activity-title {
            font-weight: 600;
            margin-bottom: 6px;
            color: var(--gray-900);
            font-size: 15px;
        }

        .activity-meta {
            display: flex;
            gap: var(--space-3);
            font-size: 13px;
            color: var(--gray-500);
        }

        .success-100 {
            background: #E6F7F5;
        }

        /* ==========================================
