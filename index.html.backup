        .settings-menu-item:hover {
            background: var(--gray-50);
        }

        .settings-menu-item:last-child {
            border-bottom: none;
        }

        .settings-menu-item-left {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }

        .settings-menu-item-icon {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: var(--gray-900);
        }

        .settings-menu-item-text {
            font-size: 16px;
            font-weight: 500;
            color: var(--gray-900);
        }

        .settings-menu-item-arrow {
            font-size: 20px;
            color: var(--gray-400);
        }

