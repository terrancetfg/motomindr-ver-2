            align-items: flex-start;
            margin-bottom: var(--space-4);
        }

        .history-card-date {
            font-size: 13px;
            color: var(--gray-500);
            font-weight: 500;
        }

        .history-card-time {
            text-align: right;
        }

        .history-card-time-value {
            font-size: 22px;
            font-weight: 700;
            color: var(--gray-900);
            line-height: 1;
        }

        .history-card-time-label {
            font-size: 11px;
            color: var(--gray-500);
            margin-top: 4px;
        }

        .history-card-title {
            font-size: 20px;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: var(--space-3);
        }

        .history-card-description {
            font-size: 14px;
            color: var(--gray-600);
            line-height: 1.5;
            margin-bottom: var(--space-4);
