        .confirmation-modal-title {
            font-size: 22px;
            font-weight: 700;
            color: var(--gray-900);
            text-align: center;
            margin-bottom: var(--space-3);
        }

        .confirmation-modal-description {
            font-size: 15px;
            color: var(--gray-600);
            text-align: center;
            line-height: 1.5;
            margin-bottom: var(--space-8);
        }

        .confirmation-modal-actions {
            display: flex;
            gap: var(--space-3);
        }

        .vehicle-detail-tabs {
            display: flex;
            background: white;
            border-bottom: 1px solid var(--gray-100);
            position: sticky;
            top: 0;
            z-index: 50;
        }

        .vehicle-detail-tab {
            flex: 1;
            padding: var(--space-5);
            background: none;
            border: none;
            font-size: 16px;
            font-weight: 600;
            color: var(--gray-400);
            cursor: pointer;
            transition: all 180ms ease;
            position: relative;
