        function calculateRideDistance() {
            const vehicleId = document.getElementById('ride-vehicle').value;

            if (vehicleId) {
                const vehicle = AppData.vehicles.find(v => v.id === vehicleId);
                const unit = vehicle.odometerType === 'hours' ? 'hours' : 'miles';

                // Update placeholders
                document.getElementById('ride-start').placeholder = `Starting ${unit}`;
                document.getElementById('ride-end').placeholder = `Ending ${unit}`;
            }

            const start = parseFloat(document.getElementById('ride-start').value);
            const end = parseFloat(document.getElementById('ride-end').value);
            const display = document.getElementById('ride-distance-display');
            const distanceElement = document.getElementById('ride-distance');

            if (start && end && end > start && vehicleId) {
                const distance = end - start;
                const vehicle = AppData.vehicles.find(v => v.id === vehicleId);
                const unit = vehicle ? (vehicle.odometerType === 'hours' ? 'hrs' : 'mi') : 'mi';

                distanceElement.textContent = `${distance.toFixed(1)} ${unit}`;
                display.classList.remove('hidden');
            } else {
                display.classList.add('hidden');
            }
        }

        function handleLogRide(event) {
            event.preventDefault();
            const form = event.target;

            const vehicleId = form[0].value;
            const vehicle = AppData.vehicles.find(v => v.id === vehicleId);
            const unit = vehicle.odometerType === 'hours' ? 'hrs' : 'mi';

            const startOdometer = parseFloat(form[1].value);
            const endOdometer = parseFloat(form[2].value);

            const log = {
                id: Date.now().toString(),
                vehicleId: vehicleId,
                startOdometer: startOdometer,
                endOdometer: endOdometer,
                distance: endOdometer - startOdometer,
                date: form[3].value,
                duration: form[4].value,
                location: form[5].value,
                notes: form[6].value,
                unit: unit,
                createdAt: new Date().toISOString()
            };

            AppData.rideLogs.push(log);

            // Update vehicle odometer
            if (endOdometer > vehicle.currentOdometer) {
                vehicle.currentOdometer = endOdometer;
            }

            saveData();
            form.reset();

            // Go back to vehicle detail or dashboard
            if (currentVehicleId) {
                showVehicleDetail(currentVehicleId);
            } else {
                showScreen('dashboard');
            }
        }

        function goBackFromLog() {
            if (currentVehicleId) {
                showVehicleDetail(currentVehicleId);
            } else {
                showScreen('dashboard');
            }
        }

        // ==========================================
        // üöÄ INITIALIZE
        // ==========================================

        document.addEventListener('DOMContentLoaded', loadData);

        // Close vehicle menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('vehicle-menu-dropdown');
            const menuBtn = document.querySelector('.vehicle-detail-menu-btn');

            if (menu && !menu.classList.contains('hidden')) {
                if (!menu.contains(event.target) && !menuBtn.contains(event.target)) {
                    hideVehicleMenu();
                }
            }
        });
    </script>
</body>
</html>
