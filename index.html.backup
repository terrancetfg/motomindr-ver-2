            transition: background 180ms ease;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            font-size: 15px;
            font-weight: 500;
            color: var(--gray-700);
        }

        .vehicle-menu-item:hover {
            background: var(--gray-50);
        }

        .vehicle-menu-item.danger {
            color: var(--danger-500);
        }

        .vehicle-menu-item.danger:hover {
            background: var(--primary-50);
        }

        .vehicle-menu-item i {
            font-size: 20px;
        }

        .confirmation-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
