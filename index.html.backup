        <!-- ==========================================
             ‚ûï ADD VEHICLE SCREEN
        ========================================== -->
        <div id="add-vehicle" class="screen">
            <div class="app-header">
                <div class="nav-bar">
                    <button class="btn-icon btn-icon-sm btn-secondary" onclick="showScreen('dashboard')">
                        <i class="ph ph-arrow-left"></i>
                    </button>
                    <div class="nav-title">Add Vehicle</div>
                    <div style="width: 40px;"></div>
                </div>
            </div>

            <div class="app-content">
                <form id="add-vehicle-form" onsubmit="handleAddVehicle(event)">
                    <div class="form-group">
                        <label class="form-label">Vehicle Photo</label>
                        <input type="file" id="vehicle-image" class="form-input" accept="image/*" onchange="previewVehicleImage(event)">
                        <div id="image-preview" class="image-preview-container hidden">
                            <img id="preview-img" alt="Vehicle preview" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Year</label>
                        <input type="number" class="form-input" id="vehicle-year" placeholder="e.g., 2020" min="1900" max="2030" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Make</label>
                        <input type="text" class="form-input" id="vehicle-make" placeholder="e.g., Honda" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Model</label>
                        <input type="text" class="form-input" id="vehicle-model" placeholder="e.g., CR-V" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Vehicle Type</label>
                        <select class="form-select" id="vehicle-type" onchange="updateOdometerType()" required>
                            <option value="">Select type...</option>
                            <option value="car">Car</option>
                            <option value="truck">Truck</option>
                            <option value="motorcycle">Motorcycle</option>
                            <option value="atv">ATV</option>
                            <option value="dirtbike">Dirt Bike</option>
                            <option value="snowmobile">Snowmobile</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Odometer Type</label>
                        <select class="form-select" id="odometer-type" required>
                            <option value="miles">Miles</option>
                            <option value="hours">Hours</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Current Reading</label>
                        <input type="number" class="form-input" id="current-reading" placeholder="Enter current miles or hours" required>
                    </div>

                    <button type="submit" class="btn btn-primary btn-full btn-lg">
                        <i class="ph ph-plus"></i>
                        Add Vehicle
                    </button>
                </form>
            </div>
        </div>

