    <script>
        // ==========================================
        // üíæ DATA MANAGEMENT
        // ==========================================

        const AppData = {
            vehicles: [],
            maintenanceLogs: [],
            rideLogs: [],
            onboarded: false
        };

        let currentVehicleId = null;
        let currentSortOption = null; // null, 'name-asc', 'name-desc', 'year-asc', 'year-desc', 'make-asc', 'type-asc'

        function loadData() {
            const saved = localStorage.getItem('motoMindrData');
            if (saved) {
                const data = JSON.parse(saved);
                Object.assign(AppData, data);
            }

            // Migrate existing vehicles to new format
            migrateVehicleData();

            // Check onboarding
            if (AppData.onboarded) {
                showScreen('dashboard');
            }
        }

        function migrateVehicleData() {
            let needsSave = false;

            AppData.vehicles.forEach(vehicle => {
                // If vehicle doesn't have year, make, model fields, try to parse from name
                if (!vehicle.year || !vehicle.make || !vehicle.model) {
                    needsSave = true;

                    // Try to parse the name (e.g., "2020 Honda CR-V" or "My Honda CR-V")
                    const nameParts = vehicle.name.split(' ');

                    // Check if first part is a year
                    const firstPart = nameParts[0];
                    if (firstPart && !isNaN(firstPart) && firstPart.length === 4) {
                        vehicle.year = firstPart;
                        vehicle.make = nameParts[1] || 'Unknown';
                        vehicle.model = nameParts.slice(2).join(' ') || 'Vehicle';
                    } else {
                        // If no year detected, set defaults
                        vehicle.year = new Date().getFullYear().toString();
                        vehicle.make = nameParts[0] || 'Unknown';
