        .account-profile-image-wrapper {
            position: relative;
            margin-bottom: var(--space-4);
        }

        .account-profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            background: var(--gray-200);
        }

        .account-profile-camera {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 50%;
