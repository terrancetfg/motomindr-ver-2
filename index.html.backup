        .vehicle-detail-tab.active {
            color: var(--gray-900);
        }

        .vehicle-detail-tab.active::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gray-900);
            border-radius: 3px 3px 0 0;
        }

        .vehicle-detail-search {
            padding: var(--space-5);
            background: white;
            border-bottom: 1px solid var(--gray-100);
        }

        .search-with-filter {
            display: flex;
            gap: var(--space-3);
            align-items: center;
        }

        .search-input-wrapper {
            flex: 1;
            position: relative;
        }

        .search-input-wrapper i {
            position: absolute;
            left: var(--space-4);
            top: 50%;
            transform: translateY(-50%);
