        .account-field-left {
            display: flex;
            flex-direction: column;
            gap: var(--space-1);
        }

        .account-field-label {
            font-size: 14px;
            color: var(--gray-600);
        }

        .account-field-value {
            font-size: 16px;
            color: var(--gray-900);
        }

        .account-field-arrow {
            font-size: 20px;
            color: var(--gray-400);
        }

        .stats-grid {
            display: grid;
